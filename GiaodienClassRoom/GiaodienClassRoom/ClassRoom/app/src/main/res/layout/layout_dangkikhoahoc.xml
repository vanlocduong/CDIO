<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <TextView
        android:text="Đăng ký lớp học"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_marginLeft="150px"
        android:textColor="@android:color/holo_red_dark"
        android:id="@+id/textView" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:text="Tạo lớp"
        android:layout_marginLeft="500px"
        android:id="@+id/taolop"
        android:layout_marginTop="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/malophoc" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:text="Cancle"
        android:layout_marginLeft="400px"
        android:id="@+id/cancle"
        android:layout_marginTop="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView"
        android:layout_marginStart="90dp" />

    <EditText
        android:id="@+id/malophoc"
        android:inputType="textEmailAddress"
        android:layout_width="700px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="4dp"
        android:hint="Mã lớp học"
        android:layout_below="@+id/textView"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/tenlophoc"
        android:inputType="textPassword"
        android:layout_width="700px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="4dp"
        android:fontFamily="sans-serif"
        android:hint="Tên lớp học"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
